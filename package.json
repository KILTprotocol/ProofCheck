{
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "node": ">= v18.12.1"
  },
  "scripts": {
    "prettify": "prettier --write \"src/**/*.ts*\"",
    "lint": "yarn run lint-css && yarn run lint-js",
    "lint-js": "eslint --max-warnings 0 --config ./.eslintrc.json \"src/**/*.ts*\"",
    "lint-css": "stylelint --max-warnings 0 --fix \"src/**/*.css\"",
    "dev": "yarn parcel watch",
    "build": "NODE_OPTIONS=--no-experimental-fetch yarn parcel build",
    "start": "node --enable-source-maps dist/backend/server.js",
    "dev-start": "echo '{\"type\":\"commonjs\"}' > dist/package.json && supervisor --watch dist/backend/ -- --enable-source-maps dist/backend/server.js"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.0",
    "@hapi/inert": "^7.0.1",
    "@kiltprotocol/sdk-js": "^0.31.0",
    "@kiltprotocol/vc-export": "0.31.0",
    "@polkadot/util-crypto": "^10.4.1",
    "dotenv": "^16.0.3",
    "exiting": "^6.1.0",
    "hapi-pino": "^11.0.1",
    "http-status-codes": "^2.2.0",
    "ky": "^0.33.2",
    "node-cache": "^5.1.2",
    "pino": "^8.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^5.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@parcel/optimizer-data-url": "^2.7.0",
    "@parcel/transformer-inline-string": "^2.7.0",
    "@types/hapi__hapi": "^20.0.13",
    "@types/hapi__inert": "^5.2.6",
    "@types/node": "^18.11.14",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "parcel": "^2.7.0",
    "pino-pretty": "^9.3.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "process": "^0.11.10",
    "react-router": "^5.3.4",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1",
    "supervisor": "^0.12.0",
    "typescript": "^4.9.5"
  },
  "targets": {
    "frontend": {
      "context": "browser",
      "engines": {
        "browsers": "last 2 Chrome versions, last 2 Firefox versions"
      },
      "source": "src/frontend/index.html",
      "distDir": "dist/frontend"
    },
    "backend": {
      "context": "node",
      "source": [
        "src/backend/server.ts",
        "src/backend/createDID.ts"
      ],
      "distDir": "dist/backend",
      "outputFormat": "esmodule"
    }
  }
}
